<div class="container mt-5">
  <h1 class="text-center"><%= link_to @list.name, list_path(@list), style: "text-decoration: none; color: black" %></h1>
  <h4 class="text-center">Add new Film</h3>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit %>
  <% end %>
</div>
